{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": false,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021",
		],
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"react": [
				"./node_modules/preact/compat/"
			],
			"react-dom": [
				"./node_modules/preact/compat/"
			],
			"@/*": [
        "src/*"
      ]
		}
	},
	"include": [
		"node_modules/vite/client.d.ts",
		"**/*"
	]
}